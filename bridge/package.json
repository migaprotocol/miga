{
  "name": "@miga/bridge",
  "version": "0.1.0",
  "description": "MIGA multi-chain bridge SDK - Wormhole + Lux Bridge integration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.10.18",
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.8",
    "@solana/spl-token": "^0.4.9",
    "ethers": "^6.13.4",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.95.0",
    "ethers": "^6.0.0",
    "viem": "^2.0.0"
  },
  "keywords": [
    "miga",
    "solana",
    "wormhole",
    "bridge",
    "cross-chain",
    "ethereum",
    "lux"
  ],
  "license": "MIT"
}
